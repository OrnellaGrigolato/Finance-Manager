generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


model Users {
  dni Int @id  
  username String @db.VarChar(55) @unique
  email String @db.VarChar(100) @unique
  password String @db.VarChar(55)
  login_date DateTime? @db.Timestamp() @default(now())
  available_money Decimal @db.Decimal(10,2)
  lastmove_amount Decimal @db.Decimal(10,2) 
  lastmove_date DateTime? @db.Timestamp() @default(now())
  moves Moves []
}

model Moves {
  id_moves Int @id @unique
  description String @db.Text() 
  income_amount Decimal @db.Decimal(10,2) @default(0)
  discount_amount Decimal @db.Decimal(10,2) @default(0)
  movement_date DateTime @db.Timestamp() @default(now())
  user Users @relation(fields: [user_dni],references: [dni])
  user_dni Int 
  title String @db.VarChar(35)
  currency Currency @relation(fields: [currency_id],references: [id_currency])
  currency_id Int 

  @@index([user_dni])
  @@index([currency_id])
}

model Currency {
  id_currency Int @id @unique 
  name String @db.VarChar(35) @default("ARG")
  moves Moves[]
}